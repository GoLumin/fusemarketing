---
interface Props {
  variant?: "primary" | "secondary" | "ghost";
  href?: string;
  size?: "sm" | "md" | "lg";
  class?: string;
}

const { variant = "primary", href, size = "md", class: className } = Astro.props;

const sizeClasses = {
  sm: "px-4 py-2 text-sm",
  md: "px-6 py-3 text-base",
  lg: "px-8 py-4 text-lg",
};

const variantClasses = {
  primary:
    "bg-accent-indigo text-white font-semibold hover:bg-accent-indigo/90 transition-colors",
  secondary:
    "border border-gray-300 text-gray-700 hover:text-gray-900 hover:border-gray-500 transition-colors",
  ghost:
    "text-gray-500 hover:text-gray-900 transition-colors underline-offset-4 hover:underline",
};

const base = `inline-flex items-center justify-center rounded-lg cursor-pointer ${sizeClasses[size]} ${variantClasses[variant]} ${className ?? ""}`.trim();

const Tag = href ? "a" : "button";
---

{href ? (
  <a href={href} class={base}>
    <slot />
  </a>
) : (
  <button class={base}>
    <slot />
  </button>
)}
