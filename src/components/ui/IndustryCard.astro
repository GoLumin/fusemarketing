---
interface Props {
  title: string;
  description: string;
  href: string;
  icon: string;
}

const { title, description, href, icon } = Astro.props;
---

<a href={href} class="group bg-bg-secondary border border-border p-6 hover:border-accent transition-all block">
  <div class="w-10 h-10 bg-accent-light flex items-center justify-center mb-4">
    <svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <Fragment set:html={icon} />
    </svg>
  </div>
  <h3 class="text-lg font-semibold text-text-primary mb-2 group-hover:text-accent transition-colors">
    {title}
  </h3>
  <p class="text-sm text-text-secondary leading-relaxed mb-4">{description}</p>
  <span class="text-sm text-accent group-hover:underline">Learn more &rarr;</span>
</a>
