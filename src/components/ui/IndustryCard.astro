---
interface Props {
  title: string;
  description: string;
  href: string;
  icon: string;
}

const { title, description, href, icon } = Astro.props;
---

<a href={href} class="group bg-surface border border-border rounded-xl p-6 hover:border-accent-indigo/50 transition-all hover:glow-sm block">
  <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-accent-indigo/20 to-accent-cyan/20 flex items-center justify-center mb-4">
    <svg class="w-5 h-5 text-accent-cyan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <Fragment set:html={icon} />
    </svg>
  </div>
  <h3 class="text-lg font-semibold text-white mb-2 group-hover:gradient-text transition-colors">
    {title}
  </h3>
  <p class="text-sm text-gray-400 leading-relaxed mb-4">{description}</p>
  <span class="text-sm text-accent-cyan group-hover:underline">Learn more &rarr;</span>
</a>
