---
interface Props {
  eyebrow?: string;
  title: string;
  subtitle?: string;
  center?: boolean;
}

const { eyebrow, title, subtitle, center = true } = Astro.props;
---

<div class={`max-w-3xl ${center ? "mx-auto text-center" : ""} mb-12 md:mb-16`}>
  {eyebrow && (
    <p class="text-sm font-semibold uppercase tracking-widest gradient-text mb-3">
      {eyebrow}
    </p>
  )}
  <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-text-primary mb-4">
    {title}
  </h2>
  {subtitle && (
    <p class="text-lg md:text-xl text-text-secondary leading-relaxed">
      {subtitle}
    </p>
  )}
</div>
