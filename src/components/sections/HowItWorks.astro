---
import SectionHeading from "../ui/SectionHeading.astro";

const steps = [
  {
    number: "01",
    title: "Capture the Intent",
    description: "Every form submission captures the full signal — who they are, what they need, and the exact ad click that brought them in. This is where your ground truth starts.",
  },
  {
    number: "02",
    title: "Validate with Real Data",
    description: "Dynamic quoting and your CRM pipeline turn raw leads into verified business outcomes. GoFuse knows what you sell, where you serve, and what actually converts.",
  },
  {
    number: "03",
    title: "Compound the Advantage",
    description: "Verified signals flow back to ad platforms and strengthen how search engines understand your business. The more you close, the smarter everything gets — paid and organic.",
  },
];
---

<section class="py-16 md:py-24 bg-navy-900/50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <SectionHeading
      eyebrow="How It Works"
      title="From Click to Closed-Loop Authority"
      subtitle="Every booking makes your ads smarter and your digital presence stronger. The loop never stops compounding."
    />

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {steps.map((step, i) => (
        <div class="relative">
          {/* Connector line */}
          {i < steps.length - 1 && (
            <div class="hidden md:block absolute top-8 left-[calc(50%+2rem)] w-[calc(100%-4rem)] h-px bg-gradient-to-r from-accent-indigo to-accent-cyan opacity-30"></div>
          )}

          <div class="text-center">
            <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-gradient-to-br from-accent-indigo to-accent-cyan text-white text-xl font-bold mb-6">
              {step.number}
            </div>
            <h3 class="text-xl font-semibold text-white mb-3">{step.title}</h3>
            <p class="text-gray-400 leading-relaxed max-w-sm mx-auto">{step.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
