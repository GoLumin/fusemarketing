import SectionHeading from "../ui/SectionHeading.astro";

const props = [
  {
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3.75 3v11.25A2.25 2.25 0 006 16.5h2.25M3.75 3h-1.5m1.5 0h16.5m0 0h1.5m-1.5 0v11.25A2.25 2.25 0 0118 16.5h-2.25m-7.5 0h7.5m-7.5 0l-1 3m8.5-3l1 3m0 0l.5 1.5m-.5-1.5h-9.5m0 0l-.5 1.5M9 11.25v1.5M12 9v3.75m3-6v6" />`,
    title: "Signal-Based Marketing",
    description: "Feed real conversion data — bookings, revenue, actual customer value — back to Google Ads so the algorithm optimizes for outcomes, not clicks.",
  },
  {
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15.75 15.75V18m-7.5-6.75h.008v.008H8.25v-.008zm0 2.25h.008v.008H8.25v-.008zm0 2.25h.008v.008H8.25v-.008zm0 2.25h.008v.008H8.25v-.008zm2.498-6.75h.007v.008h-.007v-.008zm0 2.25h.007v.008h-.007v-.008zm0 2.25h.007v.008h-.007v-.008zm0 2.25h.007v.008h-.007v-.008zm2.504-6.75h.008v.008h-.008v-.008zm0 2.25h.008v.008h-.008v-.008zm0 2.25h.008v.008h-.008v-.008zm0 2.25h.008v.008h-.008v-.008zm2.498-6.75h.008v.008h-.008v-.008zm0 2.25h.008v.008h-.008v-.008zM8.25 6h7.5v2.25h-7.5V6zM12 2.25c-1.892 0-3.758.11-5.593.322C5.307 2.7 4.5 3.65 4.5 4.757V19.5a2.25 2.25 0 002.25 2.25h10.5a2.25 2.25 0 002.25-2.25V4.757c0-1.108-.806-2.057-1.907-2.185A48.507 48.507 0 0012 2.25z" />`,
    title: "Instant Quote Engine",
    description: "Dynamic pricing with zone-based, mileage-based, and tiered calculations that turn visitors into qualified leads with real-time quotes.",
  },
  {
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />`,
    title: "Automated Follow-Up",
    description: "Email, SMS, and webhook automations trigger on lead events — no manual follow-up needed. Stay in front of every prospect on autopilot.",
  },
];
---

<section class="py-16 md:py-24">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <SectionHeading
      eyebrow="Why GoFuse"
      title="Marketing That Actually Learns"
      subtitle="Most marketing tools stop at the click. GoFuse closes the loop — connecting ad spend to real revenue."
    />

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 md:gap-8">
      {props.map((prop) => (
        <div class="bg-surface border border-border rounded-xl p-6 md:p-8 hover:border-border-light transition-colors group">
          <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-accent-indigo/20 to-accent-cyan/20 flex items-center justify-center mb-5 group-hover:glow-sm transition-shadow">
            <svg class="w-6 h-6 text-accent-cyan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <Fragment set:html={prop.icon} />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-white mb-2">{prop.title}</h3>
          <p class="text-gray-400 leading-relaxed">{prop.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
