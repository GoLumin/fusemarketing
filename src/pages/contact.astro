---
import Layout from "../components/layout/Layout.astro";
import SectionHeading from "../components/ui/SectionHeading.astro";
import Button from "../components/ui/Button.astro";

const industries = [
  "Portable Storage",
  "Home Services (HVAC, Plumbing, Electrical)",
  "Legal & Professional Services",
  "Other",
];
---

<Layout title="Contact â€” GoFuse" description="Get in touch with the GoFuse team. We'd love to hear about your business and show you how signal-based marketing can work for you.">
  <section class="relative pt-32 pb-16 md:pt-44 md:pb-24 overflow-hidden">
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <SectionHeading
        eyebrow="Contact"
        title="Let's Talk"
        subtitle="Have questions about GoFuse? Want to see a demo? Drop us a line and we'll get back to you quickly."
      />

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12 lg:gap-16 mt-12">
        <!-- Form -->
        <div class="lg:col-span-2">
          <div class="bg-bg-secondary border border-border p-6 md:p-8">
            <form class="space-y-4">
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                <div>
                  <label for="name" class="block text-sm font-medium text-text-secondary mb-1">Name</label>
                  <input type="text" id="name" name="name" required
                    class="w-full px-4 py-3 bg-white border border-border text-text-primary placeholder-text-tertiary focus:outline-none focus:border-accent transition-colors"
                    placeholder="Your name" />
                </div>
                <div>
                  <label for="email" class="block text-sm font-medium text-text-secondary mb-1">Email</label>
                  <input type="email" id="email" name="email" required
                    class="w-full px-4 py-3 bg-white border border-border text-text-primary placeholder-text-tertiary focus:outline-none focus:border-accent transition-colors"
                    placeholder="you@company.com" />
                </div>
              </div>
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                <div>
                  <label for="phone" class="block text-sm font-medium text-text-secondary mb-1">Phone</label>
                  <input type="tel" id="phone" name="phone"
                    class="w-full px-4 py-3 bg-white border border-border text-text-primary placeholder-text-tertiary focus:outline-none focus:border-accent transition-colors"
                    placeholder="(555) 123-4567" />
                </div>
                <div>
                  <label for="company" class="block text-sm font-medium text-text-secondary mb-1">Company</label>
                  <input type="text" id="company" name="company"
                    class="w-full px-4 py-3 bg-white border border-border text-text-primary placeholder-text-tertiary focus:outline-none focus:border-accent transition-colors"
                    placeholder="Your company" />
                </div>
              </div>
              <div>
                <label for="industry" class="block text-sm font-medium text-text-secondary mb-1">Industry</label>
                <select id="industry" name="industry"
                  class="w-full px-4 py-3 bg-white border border-border text-text-primary focus:outline-none focus:border-accent transition-colors">
                  <option value="" class="text-text-tertiary">Select your industry</option>
                  {industries.map((industry) => (
                    <option value={industry}>{industry}</option>
                  ))}
                </select>
              </div>
              <div>
                <label for="message" class="block text-sm font-medium text-text-secondary mb-1">Message</label>
                <textarea id="message" name="message" rows="5" required
                  class="w-full px-4 py-3 bg-white border border-border text-text-primary placeholder-text-tertiary focus:outline-none focus:border-accent transition-colors resize-none"
                  placeholder="How can we help?"></textarea>
              </div>
              <Button variant="primary" class="w-full sm:w-auto">Send Message</Button>
            </form>
          </div>
        </div>

        <!-- Contact Info Sidebar -->
        <div>
          <div class="space-y-8">
            <div>
              <h3 class="text-lg font-semibold text-text-primary mb-2">Email Us</h3>
              <a href="mailto:hello@gofuse.io" class="text-accent hover:underline">hello@gofuse.io</a>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-text-primary mb-2">Response Time</h3>
              <p class="text-text-secondary leading-relaxed">
                We typically respond within one business day. For urgent matters, mention it in your message and we'll prioritize your request.
              </p>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-text-primary mb-2">Looking for a Demo?</h3>
              <p class="text-text-secondary leading-relaxed mb-4">
                If you'd like a guided walkthrough of GoFuse, head to our Get Started page to book a demo.
              </p>
              <Button href="/get-started" variant="secondary" size="sm">Book a Demo</Button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
