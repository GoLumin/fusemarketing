---
import Layout from "../components/layout/Layout.astro";
import SectionHeading from "../components/ui/SectionHeading.astro";
import FeatureCard from "../components/ui/FeatureCard.astro";
import CtaBanner from "../components/sections/CtaBanner.astro";
import { featureCategories } from "../data/features";
---

<Layout title="Features — GoFuse" description="Explore GoFuse's signal-based conversion tracking, lead generation, quote engine, marketing automation, and multi-channel communication features.">
  <!-- Page Header -->
  <section class="pt-32 pb-16 md:pt-44 md:pb-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <SectionHeading
        eyebrow="Features"
        title="The Full-Stack Marketing Advantage"
        subtitle="Most tools handle one piece of the puzzle. GoFuse connects intent, validation, and authority into a single closed loop — across paid and organic."
      />
    </div>
  </section>

  <!-- Feature Categories -->
  {featureCategories.map((category, i) => (
    <section id={category.id} class={`py-12 md:py-16 ${i % 2 === 0 ? "" : "bg-navy-900/50"}`}>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col md:flex-row gap-8 md:gap-16">
          <!-- Category Header -->
          <div class="md:w-1/3 md:sticky md:top-24 md:self-start">
            <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-accent-indigo/20 to-accent-cyan/20 flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-accent-cyan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <Fragment set:html={category.icon} />
              </svg>
            </div>
            <p class="text-sm font-semibold uppercase tracking-widest gradient-text mb-2">
              {category.eyebrow}
            </p>
            <h2 class="text-2xl md:text-3xl font-bold text-white mb-3">
              {category.title}
            </h2>
            <p class="text-gray-400 leading-relaxed">
              {category.description}
            </p>
          </div>

          <!-- Feature Cards Grid -->
          <div class="md:w-2/3 grid grid-cols-1 sm:grid-cols-2 gap-4">
            {category.features.map((feature) => (
              <FeatureCard title={feature.title} description={feature.description} />
            ))}
          </div>
        </div>
      </div>
    </section>
  ))}

  <CtaBanner />
</Layout>
