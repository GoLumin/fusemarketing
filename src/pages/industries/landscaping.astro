---
import Layout from "../../components/layout/Layout.astro";
import SectionHeading from "../../components/ui/SectionHeading.astro";
import Button from "../../components/ui/Button.astro";
import CtaBanner from "../../components/sections/CtaBanner.astro";

const painPoints = [
  {
    title: "Seasonal Feast or Famine",
    description: "Spring floods you with leads, winter dries up — but your ad spend stays the same because you can't tell Google which leads actually became paying jobs.",
  },
  {
    title: "Quoting Takes Too Long",
    description: "Every lead needs a custom quote. By the time you've measured the lot and run the numbers, the homeowner has already hired someone else.",
  },
  {
    title: "No Idea Which Ads Work",
    description: "You're running Google Ads, maybe some social — but you can't connect a mowing contract back to the click that started it.",
  },
];

const solutions = [
  {
    title: "Signal-Based Optimization for Landscaping",
    description: "GoFuse sends actual job revenue back to Google Ads when a lead converts. Over time, Google learns to show your ads to people who actually hire landscapers — not just people who click.",
  },
  {
    title: "Service-Area Quoting",
    description: "Define your service zones and pricing tiers. Leads get instant estimates based on their location and the services they need — no site visit required for an initial quote.",
  },
  {
    title: "Full Campaign Attribution",
    description: "Track every lead from the ad click through the quote to the signed contract. Know exactly which keywords and campaigns generate real landscaping jobs.",
  },
];

const features = [
  "Seasonal campaign management with automated triggers",
  "Service-area zone pricing for different neighborhoods",
  "Multi-service quote calculations (mowing, hardscape, design)",
  "Automated lead nurturing email & SMS sequences",
  "GCLID and UTM tracking on every form submission",
  "Revenue attribution back to specific campaigns and keywords",
];
---

<Layout title="Landscaping Marketing — GoFuse" description="GoFuse helps landscaping companies capture leads, generate service-area quotes, and feed real job data back to Google Ads.">
  <!-- Hero -->
  <section class="relative pt-32 pb-16 md:pt-44 md:pb-20 overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl">
        <p class="text-sm font-semibold uppercase tracking-widest gradient-text mb-4">Landscaping</p>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-text-primary mb-6">
          Grow your landscaping business with ads that <span class="gradient-text">actually learn.</span>
        </h1>
        <p class="text-lg text-text-secondary mb-8 leading-relaxed">
          GoFuse connects your leads, quotes, and signed contracts back to Google Ads — so the algorithm finds more customers like your best ones.
        </p>
        <Button href="/get-started" size="lg">Get Started</Button>
      </div>
    </div>
  </section>

  <!-- Pain Points -->
  <section class="py-16 md:py-24 bg-bg-secondary">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <sectionheading
        eyebrow="The Problem"
        title="Sound Familiar?"
        subtitle="Landscaping companies pour money into ads with no way to tell Google which clicks become real jobs."
      />
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {painPoints.map((point) => (
          <div class="bg-white border border-border p-6">
            <h3 class="text-lg font-semibold text-text-primary mb-3">{point.title}</h3>
            <p class="text-text-secondary leading-relaxed">{point.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Solutions -->
  <section class="py-16 md:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <SectionHeading
        eyebrow="The Solution"
        title="GoFuse Closes the Loop"
        subtitle="Feed real job data back to Google so your ads get smarter every season."
      />
      <div class="space-y-8">
        {solutions.map((solution, i) => (
          <div class="flex gap-6 items-start">
            <div class="w-10 h-10 shrink-0 bg-accent flex items-center justify-center text-white font-bold">
              {i + 1}
            </div>
            <div>
              <h3 class="text-xl font-semibold text-text-primary mb-2">{solution.title}</h3>
              <p class="text-text-secondary leading-relaxed">{solution.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Features -->
  <section class="py-16 md:py-24 bg-bg-secondary">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <SectionHeading
        eyebrow="Features"
        title="Built for Landscaping Companies"
      />
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 max-w-3xl mx-auto">
        {features.map((feature) => (
          <div class="flex items-start gap-3 bg-white border border-border p-4">
            <svg class="w-5 h-5 text-accent shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span class="text-text-secondary text-sm">{feature}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <CtaBanner />
</Layout>
