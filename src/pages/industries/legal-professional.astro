---
import Layout from "../../components/layout/Layout.astro";
import SectionHeading from "../../components/ui/SectionHeading.astro";
import Button from "../../components/ui/Button.astro";
import CtaBanner from "../../components/sections/CtaBanner.astro";

const painPoints = [
  {
    title: "Sky-High Cost Per Lead",
    description: "Legal keywords are some of the most expensive on Google. Without conversion data, you're paying top dollar for clicks that never become clients.",
  },
  {
    title: "Intake Follow-Up Is Too Slow",
    description: "Potential clients fill out a form and wait. If they don't hear back quickly, they move on to the next firm that responds first.",
  },
  {
    title: "No Visibility Into Case Attribution",
    description: "You know marketing brings in cases, but you can't tell which campaigns, keywords, or ads generated your highest-value clients.",
  },
];

const solutions = [
  {
    title: "Track Which Campaigns Bring Cases",
    description: "GoFuse captures GCLIDs and UTM parameters on every intake form. When a lead becomes a signed client, the conversion fires back to Google with the actual case value.",
  },
  {
    title: "Automated Intake Follow-Up",
    description: "Trigger instant email and SMS confirmations when a potential client submits an inquiry. Schedule follow-up sequences to keep your firm top-of-mind.",
  },
  {
    title: "High-Value Lead Attribution",
    description: "See exactly which ads, keywords, and campaigns drive signed cases — not just form fills. Optimize your ad spend for the cases that matter most.",
  },
];

const features = [
  "Custom intake forms for different practice areas",
  "Automated email & SMS follow-up sequences",
  "GCLID capture and case-value conversion tracking",
  "Lead pipeline: Inquiry → Consulted → Retained",
  "UTM tracking across all marketing channels",
  "Revenue attribution back to specific campaigns",
];
---

<Layout title="Legal & Professional Marketing — GoFuse" description="GoFuse helps law firms and professional services capture high-value leads, automate intake follow-up, and track which campaigns bring real cases.">
  <!-- Hero -->
  <section class="relative pt-32 pb-16 md:pt-44 md:pb-20 overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl">
        <p class="text-sm font-semibold uppercase tracking-widest gradient-text mb-4">Legal & Professional</p>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-text-primary mb-6">
          Track which campaigns bring <span class="gradient-text">cases, not just clicks.</span>
        </h1>
        <p class="text-lg text-text-secondary mb-8 leading-relaxed">
          GoFuse connects your intake forms, follow-up automation, and case tracking to Google Ads — so every dollar of your legal marketing budget works harder.
        </p>
        <Button href="/get-started" size="lg">Get Started</Button>
      </div>
    </div>
  </section>

  <!-- Pain Points -->
  <section class="py-16 md:py-24 bg-bg-secondary">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <SectionHeading
        eyebrow="The Problem"
        title="Sound Familiar?"
        subtitle="Law firms and professional services spend thousands on ads with no way to attribute signed clients back to the campaigns that found them."
      />
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {painPoints.map((point) => (
          <div class="bg-white border border-border p-6">
            <h3 class="text-lg font-semibold text-text-primary mb-3">{point.title}</h3>
            <p class="text-text-secondary leading-relaxed">{point.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Solutions -->
  <section class="py-16 md:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <SectionHeading
        eyebrow="The Solution"
        title="GoFuse Closes the Loop"
        subtitle="Connect ad spend to signed clients with signal-based marketing built for high-value services."
      />
      <div class="space-y-8">
        {solutions.map((solution, i) => (
          <div class="flex gap-6 items-start">
            <div class="w-10 h-10 shrink-0 bg-accent flex items-center justify-center text-white font-bold">
              {i + 1}
            </div>
            <div>
              <h3 class="text-xl font-semibold text-text-primary mb-2">{solution.title}</h3>
              <p class="text-text-secondary leading-relaxed">{solution.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Features -->
  <section class="py-16 md:py-24 bg-bg-secondary">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <SectionHeading
        eyebrow="Features"
        title="Built for Legal & Professional Services"
      />
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 max-w-3xl mx-auto">
        {features.map((feature) => (
          <div class="flex items-start gap-3 bg-white border border-border p-4">
            <svg class="w-5 h-5 text-accent shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span class="text-text-secondary text-sm">{feature}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <CtaBanner />
</Layout>
