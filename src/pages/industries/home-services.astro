---
import Layout from "../../components/layout/Layout.astro";
import SectionHeading from "../../components/ui/SectionHeading.astro";
import Button from "../../components/ui/Button.astro";
import CtaBanner from "../../components/sections/CtaBanner.astro";

const painPoints = [
  {
    title: "Leads Fall Through the Cracks",
    description: "Between HVAC, plumbing, and electrical — leads come in from everywhere. Without a unified system, follow-ups get missed and jobs get lost.",
  },
  {
    title: "Google Can't Tell Good Leads from Bad",
    description: "Your ads generate clicks and form fills, but Google has no idea which ones become $5,000 HVAC installs vs. spam submissions.",
  },
  {
    title: "Manual Quoting Slows You Down",
    description: "Every service call needs a different price. Calculating zone-based service fees and parts costs manually wastes hours every week.",
  },
];

const solutions = [
  {
    title: "Feed Real Job Value Back to Google",
    description: "When a lead becomes a booked job, GoFuse sends the actual job value as a conversion event. Google learns that a $5,000 HVAC install is worth more than a $200 service call — and optimizes accordingly.",
  },
  {
    title: "Multi-Service Lead Forms",
    description: "One platform handles leads for HVAC, plumbing, electrical, and more. Custom fields capture service type, urgency, and location so you can route leads to the right team.",
  },
  {
    title: "Service-Area Zone Pricing",
    description: "Define pricing zones for different service areas. Leads get instant estimates based on their location and the service they need.",
  },
];

const features = [
  "Multi-service lead forms with custom fields per trade",
  "Service-area zone pricing for different neighborhoods",
  "Lead routing by service type and location",
  "Automated follow-up emails and SMS notifications",
  "GCLID capture and conversion tracking per service",
  "Revenue attribution: see which ads drive which services",
];
---

<Layout title="Home Services Marketing — GoFuse" description="GoFuse helps home service companies capture multi-service leads, generate zone-based quotes, and feed real job data back to Google Ads.">
  <!-- Hero -->
  <section class="relative pt-32 pb-16 md:pt-44 md:pb-20 overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl">
        <p class="text-sm font-semibold uppercase tracking-widest gradient-text mb-4">Home Services</p>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-text-primary mb-6">
          Every booked job makes your <span class="gradient-text">ads smarter.</span>
        </h1>
        <p class="text-lg text-text-secondary mb-8 leading-relaxed">
          GoFuse connects HVAC, plumbing, electrical, and general contractor leads to real job revenue — so Google Ads optimizes for booked work, not just clicks.
        </p>
        <Button href="/get-started" size="lg">Get Started</Button>
      </div>
    </div>
  </section>

  <!-- Pain Points -->
  <section class="py-16 md:py-24 bg-bg-secondary">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <SectionHeading
        eyebrow="The Problem"
        title="Sound Familiar?"
        subtitle="Home service companies run ads across multiple trades with no way to connect job revenue back to the campaigns that generated it."
      />
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {painPoints.map((point) => (
          <div class="bg-white border border-border p-6">
            <h3 class="text-lg font-semibold text-text-primary mb-3">{point.title}</h3>
            <p class="text-text-secondary leading-relaxed">{point.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Solutions -->
  <section class="py-16 md:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <SectionHeading
        eyebrow="The Solution"
        title="GoFuse Closes the Loop"
        subtitle="One platform for every trade — with real revenue flowing back to your ads."
      />
      <div class="space-y-8">
        {solutions.map((solution, i) => (
          <div class="flex gap-6 items-start">
            <div class="w-10 h-10 shrink-0 bg-accent flex items-center justify-center text-white font-bold">
              {i + 1}
            </div>
            <div>
              <h3 class="text-xl font-semibold text-text-primary mb-2">{solution.title}</h3>
              <p class="text-text-secondary leading-relaxed">{solution.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Features -->
  <section class="py-16 md:py-24 bg-bg-secondary">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <SectionHeading
        eyebrow="Features"
        title="Built for Home Service Companies"
      />
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 max-w-3xl mx-auto">
        {features.map((feature) => (
          <div class="flex items-start gap-3 bg-white border border-border p-4">
            <svg class="w-5 h-5 text-accent shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span class="text-text-secondary text-sm">{feature}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <CtaBanner />
</Layout>
